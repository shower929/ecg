<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/swm_white">
    <ImageView
        android:id="@+id/small_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_swm_launcher_icon"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/small_icon"
        android:layout_centerVertical="true">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/swm_service"
            android:textColor="@color/swm_title"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/swm_status_connected"
            android:textColor="@color/swm_word"
            android:textSize="12dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/swm_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/swm_close"
        android:layout_alignTop="@+id/content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp" />
</RelativeLayout>