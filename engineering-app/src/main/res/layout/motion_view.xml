<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.swm.stuff.view.StepView
        android:id="@+id/swm_step_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:formatString="@string/swm_my_step"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintVertical_bias="0.028"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.swm.stuff.view.CalorieView
        android:id="@+id/swm_calorie_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:formatString="@string/swm_my_calorie"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/swm_step_view"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintVertical_bias="0.028"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.swm.stuff.view.LocationView
        android:id="@+id/swm_location_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:formatString="@string/swm_my_location"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/swm_step_view"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintVertical_bias="0.057"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.swm.chart.Oscilloscope
        android:id="@+id/swm_motion_engine_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:zeroPosition="bottom"
        android:visibility="gone"/>


    <RadioGroup
        android:id="@+id/swm_motion_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintLeft_toRightOf="@+id/swm_motion_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.476">

        <com.swm.stuff.view.RadioButton
            android:id="@+id/swm_accelerator_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/swm_accelerator"
            android:textColor="@color/swm_white" />

        <com.swm.stuff.view.RadioButton
            android:id="@+id/swm_gyro_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/swm_gyro"
            android:textColor="@color/swm_white" />

        <com.swm.stuff.view.RadioButton
            android:id="@+id/swm_magnetic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/swm_magnetic"
            android:textColor="@color/swm_white" />
    </RadioGroup>
</android.support.constraint.ConstraintLayout>
